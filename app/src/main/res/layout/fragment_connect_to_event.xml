<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfragmentone"
    android:gravity="center"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"

    tools:context="com.example.nava.a2003.ConnectToEventFragment">


    <EditText
        android:id="@+id/txtEventCode"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/eventCode"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:id="@+id/btnsSignlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAttend"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/connect"
            android:textColor="@color/colorfragmentone" />

        <FrameLayout
            android:id="@+id/flConnectToEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize" />


    </LinearLayout>

</LinearLayout>
