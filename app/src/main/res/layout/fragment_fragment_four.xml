<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorfragmentone"

        android:gravity="center"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize"
        tools:context=".Invited_To.FragmentFour">


    <EditText
        android:id="@+id/txtCounter"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/howMany"
        android:inputType="textEmailAddress" />

        <LinearLayout
            android:id="@+id/btnsSignlinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAttend"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/attend"
                android:textColor="@color/colorfragmentone" />

            <Button
                android:id="@+id/btnNo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/notattend"
                android:textColor="@color/colorfragmentone" />

        </LinearLayout>
    </LinearLayout>
